<% if @user %>
	<%= render layout: "two_column", locals: {user: @user} do %>
		<h2><%= @user.name %> は <%= @user.friends.length %> 人をフォローしています。</h2>
		<%= render partial: "notice", locals: {notice: notice} %>
		<% if @user.friends.length > 0 %>
		<div class="bordered-list striped">
			<%= render @user.friends %>
		</div>
		<% else %>
		<p>フォローしている人がいません。</p>
		<% end %>
	<% end %>
<% else %>
<p>該当ユーザが存在しません。</p>
<% end %>