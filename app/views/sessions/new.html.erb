
<div class="row-fluid">
	<div class="span8">
    <div class="column-header">
      <h2>ログイン</h2>
    </div>
		<%= form_tag(nil, class: "form-horizontal") do %>
		  <div class="control-group">
		    <%= label_tag :name, "ユーザ名", class: "control-label" %>
				<div class="controls">
					<%= text_field_tag :name %>
				</div>
		  </div>
		  <div class="control-group">
		    <%= label_tag :password, "パスワード", class: "control-label" %>
				<div class="controls">
					<%= password_field_tag :password %>
				</div>
		  </div>
		  <div class="control-group">
				<div class="controls">
				  <%= submit_tag "ログイン", class: "btn" %>
				</div>
		  </div>
		<% end %>
	</div>
	<div class="span4">
		ユーザ登録（無料）
		<%= link_to "ユーザ登録", new_user_path, class: "btn" %>
	</div>
</div>


