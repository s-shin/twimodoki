<div class="tweet">
	<% if tweet.user == @current_user %>
	<a class="destroy" href="<%= tweet_path(tweet) %>" data-method="delete" rel="nofollow" data-confirm="<%= t "views.messages.delete_confirm" %>">
		<i class="icon-trash"></i>
	</a>
	<% end %>
	<% if tweet.photo? %>
	<a href="<%= tweet.photo.url %>" class="photo" data-colorbox="true">
		<i class="icon-picture"></i>
	</a>
	<% end %>
	<div class="name">
		<a href="<%= pages_user_path(name: tweet.user.name) %>">
			<i class="icon-twitter"></i>
			<%=h tweet.user.name %>
		</a>
	</div>
	<p style="display: inline">
		<%= raw auto_link hbr tweet.content %>
		<br />
		<small class="muted"><%=h time_ago_in_words tweet.created_at %>Ââç</small>
	</p>
</div>
