<div class="profile2">
	<div class="name">
		<b>名前</b> <%= user.name %>
	</div>
	<div class="row-fluid">
		<div class="span4"><a href="<%= pages_following_path(name: user.name) %> ">
			<span class="num"><%= user.friends.length %></span><br />
			<small>フォローしている</small>
		</a></div>
		<div class="span4"><a href="<%= pages_followers_path(name: user.name) %>">
			<span class="num"><%= user.followers.length %></span><br />
			<small>フォローされている</small>
		</a></div>
	</div>
	<a href="<%= pages_user_path(name: user.name) %>" class="tweet-num">
		<span class="num"><%= user.tweets.length %></span>
		つぶやき
	</a>
</div>
