<%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>
  <% if @user.errors.any? %>
    <div class="errors">
  		<h4><%= @user.errors.count %> 個の入力エラーがあります。</h4>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :another_name, "名前", class: "control-label" %>
		<div class="controls">
			<%= f.text_field :another_name %>
		</div>
  </div>
  <div class="control-group">
    <%= f.label :name, "ユーザ名", class: "control-label" %>
		<div class="controls username">
			<%= f.text_field :name, maxlength: 15 %>
			<p class="help-block">あなたのURL: <%= root_url %><span>...</span></p>
		</div>
  </div>
  <div class="control-group">
    <%= f.label :password, "パスワード", class: "control-label" %>
		<div class="controls">
			<%= f.password_field :password %>
		</div>
  </div>
  <div class="control-group">
    <%= f.label :password_confirmation, "パスワード（確認）", class: "control-label" %>
		<div class="controls">
	    <%= f.password_field :password_confirmation %>
		</div>
  </div>
  <div class="control-group">
    <%= f.label :email, "メールアドレス", class: "control-label" %>
		<div class="controls">
	    <%= f.email_field :email %>
		</div>
  </div>
  <div class="control-group">
		<div class="controls">
			<label class="checkbox">
				<%= f.check_box :private %>つぶやきを非公開にする
			</label>
		</div>
  </div>
  <div class="control-group">
		<div class="controls">
		  <%= f.submit "アカウントを作成する", class: "btn" %>
		</div>
  </div>
<% end %>
